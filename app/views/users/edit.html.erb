<div class="container px-5 px-sm-0">
  <%= render 'books/error', model: @user %>
  <div =class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>
     <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
     <div class="form-group">
       <label for="d-block">Name</label>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
     </div>
     <div class="form-group">
       <label for="d-block">Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*" %>
     </div>
     <div class="form-group">
       <label class="block">Introduction</label>
       <%= f.text_area :introduction, class: "form-control" %>
     </div>
     <div class="form-group">
       <%= f.submit "Update User", class: "btn btn-secondary" %>
     </div>
     <% end %>
    </div>
  </div>
</div>