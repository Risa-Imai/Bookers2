<h2>New Book</h2>
<%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>


<div class="col-xs-9">
  <table class="table book-index">
    <h2>Books</h2>
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </thead>
    <tbody>
     <% @books.each do |book| %>
       <tr>
         <td>
          <%= link_to user_path(book.user) do %>
            <%= image_tag 'no_image.jpg' %></td>
          <% end %>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td>
       </tr>
     <% end %>
    </tbody>
  </table>
</div>